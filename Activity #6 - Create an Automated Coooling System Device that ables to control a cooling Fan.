//Activity #6 - Create an Automated Coooling System Device that ables to control a cooling Fan.

#include <LiquidCrystal.h> // includes the LiquidCrystal Library 
LiquidCrystal lcd(12, 13, 8, 9, 10, 11); // Creates an LCD object. Parameters: (rs, enable, d4, d5, d6, d7) 
#define buzzer 7

int redLight = 4;
int greenLight = 5;
int yellowLight = 6;
const int Motor_pin = 3;
int flag,Speed;
int sensorPin = 0;

void setup()
{
 Serial.begin(9600);
 lcd.begin(16,2); 
 pinMode(Motor_pin, OUTPUT);
 pinMode(redLight, OUTPUT);
 pinMode(greenLight, OUTPUT);
 pinMode(yellowLight, OUTPUT);
 pinMode(buzzer, OUTPUT);
}


  void temperatureRead()
  {
    
   int reading = analogRead(sensorPin);
   float voltage = reading * 5.0;
   voltage /= 1024.0; 
   float temperatureC = (voltage - 0.5) * 100 ;

    Serial.print("Celsius: ");
    Serial.println(temperatureC);
    
    
    float temperatureF = (temperatureC * 9.0 / 5.0) + 32.0;
    Serial.print("Fahrenheit: ");
    Serial.println(temperatureF);
  
    
     if (temperatureC >= 37)
    {
      redSignal();
    }
    
    
     else if (temperatureC >= 27 && temperatureC <= 37)
    {
      greenSignal();
    }
    
     else if (temperatureC <= 27)
    {
      yellowSignal();
    }
    
    Serial.println(" "); 
    
  }  


//#Red- Hot/High temperature
//Temperature is >=27
//Buzzer that emits emergency Sound Signal if room temperature is above 37C.

void redSignal()
{
      int reading = analogRead(sensorPin);
      float voltage = reading * 5.0;
      voltage /= 1024.0; 
      float temperatureC = (voltage - 0.5) * 100 ;
    
      digitalWrite(greenLight, LOW);
      digitalWrite(redLight, HIGH);
      digitalWrite(yellowLight, LOW);
      digitalWrite(buzzer, HIGH);
   
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("HIGH TEMP!");
      
      lcd.setCursor(0,1);
      lcd.print("TEMP: ");
      lcd.print(temperatureC);
      lcd.print(" C");
      delay(1500);
  
    }


//Green- Room temperature/ Medium Temperature
//Temperature is >= 27 & <= 37
      
void greenSignal()
{
      int reading = analogRead(sensorPin);
      float voltage = reading * 5.0;
      voltage /= 1024.0; 
      float temperatureC = (voltage - 0.5) * 100 ;
    
      digitalWrite(redLight, LOW);
      digitalWrite(greenLight, HIGH);
      digitalWrite(yellowLight, LOW);
      digitalWrite(buzzer, LOW);

      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("ROOM TEMP!");
      
      lcd.setCursor(0,1);
      lcd.print("TEMP: ");
      lcd.print(temperatureC);
      lcd.print(" C");
      delay(1500);
     
    }


//Yellow- Cold/ lower than room Temperature
//Temperature is <= 27
//Buzzer that emits emergency Sound Signal if room temperature is below 27C.
        
void yellowSignal()

{
      int reading = analogRead(sensorPin);
      float voltage = reading * 5.0;
      voltage /= 1024.0; 
      float temperatureC = (voltage - 0.5) * 100 ;
    
      digitalWrite(greenLight, LOW);
      digitalWrite(redLight, LOW);
      digitalWrite(yellowLight, HIGH);
      digitalWrite(buzzer, HIGH);
      
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("LOW TEMP!");
      
      lcd.setCursor(0,1);
      lcd.print("TEMP: ");
      lcd.print(temperatureC);
      lcd.print(" C");
      delay(1500);
      
    }
    

void loop() 
{
  temperatureRead();
}
